<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conexão Verde</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConexaoVerdeMVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-background">

<header>
    <nav class="sticky top-0 bg-[#2d7c2f] text-white z-20 shadow-md h-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-6">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <img src="~/images/logo.png" alt="Logo Home" class="h-16 w-auto">
                    </a>
                </div>

                <!-- Ícone do menu (hamburguer) -->
                <div class="lg:hidden">
                    <button id="menuButton" class="text-white focus:outline-none">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>

                <!-- Menu de navegação -->
                <div id="navMenu" class="hidden lg:flex space-x-4">
                    <a href="/Login/Login" class="text-sm font-semibold text-white border border-white rounded-md px-4 py-2 hover:bg-white hover:text-[#2d7c2f] transition">Login</a>
                    <a href="/Usuario/Cadastro" class="text-sm font-semibold text-white border border-white rounded-md px-4 py-2 hover:bg-white hover:text-[#2d7c2f] transition">Cadastrar-se</a>
                </div>

                <!-- Menu colapsado para dispositivos móveis -->
                <div id="mobileMenu" class="lg:hidden hidden absolute top-16 right-0 bg-[#2d7c2f] w-64 p-4 transition-all duration-300 ease-in-out transform -translate-y-4 rounded-l-lg">
                    <a href="/Login/Login" class="block text-sm font-semibold text-white border border-white rounded-md px-4 py-2 text-center hover:bg-white hover:text-[#2d7c2f] transition">Login</a>
                    <a href="/Usuario/Cadastro" class="block text-sm font-semibold text-white border border-white rounded-md px-4 py-2 mt-2 text-center hover:bg-white hover:text-[#2d7c2f] transition">Cadastrar-se</a>
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Main content -->
<div class="container mx-auto px-4 py-6">
    <main role="main" class="pb-6">
        @RenderBody()
    </main>
</div>

  <!-- Footer -->
  <footer class="bottom-0 left-0 w-full text-white relative">
    <!-- Waves Background -->
    <div>
      <div class="wave"></div>
      <div class="wave"></div>
      <div class="wave"></div>
    </div>

    <div class="container mx-auto px-4 py-6 relative z-10">
      <div class="text-center">
        <p>&copy; 2024 - Conexão Verde - <a href="/Home/Privacy" class="text-white">Política de Privacidade</a></p>
      </div>
    </div>
  </footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

<script>
    const menuButton = document.getElementById('menuButton');
    const mobileMenu = document.getElementById('mobileMenu');
    
    menuButton.addEventListener('click', () => {
        // Toggle da visibilidade do menu móvel
        mobileMenu.classList.toggle('hidden');
        mobileMenu.classList.toggle('translate-y-0');
    });
</script>

</body>
</html>