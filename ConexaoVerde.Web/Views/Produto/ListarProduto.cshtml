@model IEnumerable<ConexaoVerde.AppData.Entities.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">

    <div class="container mx-auto p-6">
        <!-- Título -->
        <h1 class="text-3xl font-bold mb-6">Produtos Disponíveis</h1>

        <!-- Botão para criar produto -->
        <div class="mb-6">
            <a asp-action="CriarProduto" class="px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600 transition">
                Cadastrar Novo Produto
            </a>
        </div>

        <!-- Lista de Produtos -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var produto in Model)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <!-- Imagem do Produto -->
                    <img src="@produto.ImgProduto" alt="@produto.NomeProduto" class="w-full h-48 object-cover">
                    
                    <!-- Corpo do Card -->
                    <div class="p-4">
                        <h5 class="text-lg font-bold">@produto.NomeProduto</h5>
                        <p class="text-sm text-gray-500">@produto.Categoria?.NomeCategoria</p>
                        <p class="text-sm mt-2">@produto.Descricao</p>
                        <h6 class="text-lg text-green-500 font-semibold mt-4">@produto.Preco.ToString("C")</h6>

                        <!-- Botões de Ação -->
                        <div class="mt-4 flex justify-between">
                            <a asp-action="Details" asp-route-id="@produto.Id" class="bg-green-600 text-white px-6 py-2 rounded-lg shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                                Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@produto.Id" class="bg-green-950 text-white px-6 py-2 rounded-lg shadow-sm hover:bg-green-950 focus:outline-none focus:ring-2 focus:ring-green-950 focus:ring-offset-2">
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@produto.Id" class="px-4 py-2 text-sm bg-red-500 text-white rounded hover:bg-red-600 transition">
                                Excluir
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
