@model ConexaoVerde.Web.Models.UsuarioModel

@{
    ViewData["Title"] = "Criar Usuário";
}

<!-- component -->
<section class="bg-white dark:bg-gray-900">
    <div class="flex justify-center min-h-screen">
        <div class="hidden bg-cover lg:block lg:w-2/5"
            style="background-image: url('https://img.freepik.com/free-photo/natural-cosmetic-product-collection_23-2148574896.jpg?t=st=1730999797~exp=1731003397~hmac=f7bc3c6e2e719e6563099bbc2f92097672da642ac6bb07be523ca64cbd8f6876&w=740')">
        </div>

        <div class="flex items-center w-full max-w-3xl p-8 mx-auto lg:px-12 lg:w-3/5">
            <div class="w-full">
                <h1 class="text-2xl font-semibold tracking-wider text-gray-800 capitalize dark:text-white">
                    Registre-se
                </h1>

                <p class="mt-4 text-gray-500 dark:text-gray-400">
                    Preencha o formulário abaixo para criar a sua conta.
                </p>


                <!--botões tougle-->
                <div class="mt-6">
                    <h1 class="text-gray-500 dark:text-gray-300">Selecione o seu tipo de conta</h1>

                    <div class="mt-3 md:flex md:items-center md:-mx-2">
                        <!-- Botão Cliente -->
                        <button id="clienteBtn"
                            class="flex justify-center w-full px-6 py-3 text-blue-500 border border-blue-500 rounded-md md:w-auto md:mx-2 focus:outline-none transition-colors duration-300"
                            onclick="toggleAccountType(true)">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            <span class="mx-2">Cliente</span>
                        </button>

                        <!-- Botão Fornecedor -->
                        <button id="fornecedorBtn"
                            class="flex justify-center w-full px-6 py-3 mt-4 text-blue-500 border border-blue-500 rounded-md md:mt-0 md:w-auto md:mx-2 dark:border-blue-400 dark:text-blue-400 focus:outline-none transition-colors duration-300"
                            onclick="toggleAccountType(false)">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span class="mx-2">Fornecedor</span>
                        </button>
                    </div>
                </div>

                <!-- Campos do Cliente (Ocultos inicialmente) -->
                <form asp-action="Cadastro" method="post" enctype="multipart/form-data"
                    class="grid grid-cols-1 gap-6 mt-8">

                    <input asp-action="Perfil" type="hidden" id="perfilInput" name="perfilInput" value="false" />
                    <input type="hidden" asp-for="Perfil" value='Cliente' />
                    <!-- Campos do Cliente (Ocultos inicialmente) -->
                    <div id="clienteFields" style="display:none;" class="lg:col-span-1">
                        <!-- Foto de Perfil -->
                        <div class="mb-4">
                            <label asp-for="FotoPerfil" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Foto
                                de Perfil
                            </label>
                            <div
                                class="relative border-2 border-dashed border-gray-300 rounded-md p-6 flex flex-col items-center justify-center text-center w-full">
                                <div
                                    class="absolute inset-0 flex items-center justify-center bg-gray-100 border-4 border-dashed border-blue-300 rounded-md z-0 p-4">
                                    <span class="text-gray-500 text-sm mb-2 font-semibold">
                                        Arraste e solte uma imagem
                                        aqui ou
                                    </span>
                                </div>
                                <label for="fotoPerfilInput"
                                    class="cursor-pointer w-full py-3 px-6 bg-blue-500 text-white rounded-md hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-sm text-center z-10">
                                    Clique ou Arraste para selecionar uma imagem
                                </label>
                                <input id="fotoPerfilInput" type="file" accept="image/*" class="hidden" />
                                <span asp-validation-for="FotoPerfil" class="text-red-500"></span>
                            </div>
                        </div>

                        <!-- Nome -->
                        <div class="mb-4">
                            <label asp-for="ClienteModel.Nome"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Nome
                            </label>
                            <input asp-for="ClienteModel.Nome" type="text" placeholder="Nome"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="ClienteModel.Nome" class="text-red-500"></span>
                        </div>

                        <!-- SobrenomeNome -->
                        <div class="mb-4">
                            <label asp-for="ClienteModel.Sobrenome"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Sobrenome
                            </label>
                            <input asp-for="ClienteModel.Sobrenome" type="text" placeholder="Sobrenome"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="ClienteModel.Sobrenome" class="text-red-500"></span>
                        </div>

                        <!-- CPF   -->
                        <div class="mb-4">
                            <label asp-for="ClienteModel.Cpf"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                CPF
                            </label>
                            <input asp-for="ClienteModel.Cpf" type="text" placeholder="000.000.000-00"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                oninput="formatarCpf(this)" />
                            <span id="cpfError" class="text-red-500 hidden">CPF inválido. Por favor, digite um CPF
                                válido.</span>
                        </div>

                        <!-- Telefone -->
                        <div class="mb-4">
                            <label asp-for="Telefone" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Telefone
                            </label>
                            <input asp-for="Telefone" type="tel" id="telefone" placeholder="(11) 91234-5678"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                maxlength="15" oninput="formatPhoneNumber(this)" />
                            <span asp-validation-for="Telefone" class="text-red-500"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Email
                            </label>
                            <input asp-for="Email" type="email" placeholder="exemplo@email.com"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="Email" class="text-red-500"></span>
                        </div>

                        <!-- Senha -->
                        <div class="mb-4">
                            <label asp-for="Senha" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Senha
                            </label>
                            <input asp-for="Senha" type="password" id="senha" placeholder="********"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="Senha" class="text-red-500"></span>
                        </div>

                        <!-- Barra de Força da Senha -->
                        <div class="mb-4">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Força da Senha</label>
                            <div id="password-strength-container" class="w-full bg-gray-200 rounded-full">
                                <div id="password-strength-bar" class="h-1 rounded-full"
                                    style="width: 0%; background-color: #e0e0e0;">
                                </div>
                            </div>
                        </div>

                        <!-- Confirmar Senha -->
                        <div class="mb-4">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Confirmar Senha</label>
                            <input type="password" id="confirm-senha" placeholder="********"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <!-- Mensagem de erro caso as senhas não coincidam -->
                            <span id="senha-error" class="text-red-500 hidden">As senhas não coincidem.</span>
                        </div>


                        <div class="lg:col-span-2">
                            <button type="submit"
                                class="w-full px-6 py-3 mt-4 text-white bg-blue-500 border border-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Criar conta
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Campos do Fornecedor (Ocultos inicialmente) -->
                <form asp-action="Cadastro" method="post" enctype="multipart/form-data">

                    <input asp-action="Perfil" type="hidden" id="perfilInput" name="perfilInput" value="false" />
                    <input type="hidden" asp-for="Perfil" value='Fornecedor' />
                    <div id="fornecedorFields" style="display:none;" class="lg:col-span-1">
                        <!-- Razão Social -->
                        <div class="mb-4">
                            <label asp-for="FornecedorModel.RazaoSocial"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Razão Social</label>
                            <input asp-for="FornecedorModel.RazaoSocial" type="text" placeholder="Exemplo Ltda."
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="FornecedorModel.RazaoSocial" class="text-red-500"></span>
                        </div>

                        <!-- Nome Fantasia -->
                        <div class="mb-4">
                            <label asp-for="FornecedorModel.NomeFantasia"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Nome Fantasia</label>
                            <input asp-for="FornecedorModel.NomeFantasia" type="text" placeholder="Exemplo Nome"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="FornecedorModel.NomeFantasia" class="text-red-500"></span>
                        </div>

                        <!-- CNPJ -->
                        <div class="mb-4">
                            <label asp-for="FornecedorModel.Cnpj"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">CNPJ</label>
                            <input asp-for="FornecedorModel.Cnpj" type="text" placeholder="00.000.000/0000-00"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="FornecedorModel.Cnpj" class="text-red-500"></span>
                        </div>

                        <!-- Foto de Perfil -->
                        <div class="mb-4">
                            <label asp-for="FotoPerfil" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Foto de Perfil
                            </label>
                            <input asp-for="FotoPerfil" type="file" accept="image/*"
                                class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="FotoPerfil" class="text-red-500"></span>
                        </div>

                        <!-- Foto dos Produtos -->
                        <div class="mb-4">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Fotos dos
                                Produtos
                            </label>
                            <input type="file" accept="image/*" multiple
                                class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="FornecedorModel.Endereco.CEP"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">CEP</label>
                            <input asp-for="FornecedorModel.Endereco.CEP" type="text" placeholder="Ex: 12345-678"
                                id="cep"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                onblur="consultarCEP()" />
                            <span asp-validation-for="FornecedorModel.Endereco.CEP" class="text-red-500"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FornecedorModel.Endereco.Rua"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Rua</label>
                            <input asp-for="FornecedorModel.Endereco.Rua" type="text" id="Endereco_Rua"
                                placeholder="Ex: Rua das Flores"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                disabled />
                            <span asp-validation-for="FornecedorModel.Endereco.Rua" class="text-red-500"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FornecedorModel.Endereco.Numero"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Número</label>
                            <input asp-for="FornecedorModel.Endereco.Numero" type="number" placeholder="Ex: 123"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="FornecedorModel.Endereco.Numero" class="text-red-500"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FornecedorModel.Endereco.Cidade"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Cidade</label>
                            <input asp-for="FornecedorModel.Endereco.Cidade" type="text" id="Endereco_Cidade"
                                placeholder="Ex: São Paulo"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                disabled />
                            <span asp-validation-for="FornecedorModel.Endereco.Cidade" class="text-red-500"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FornecedorModel.Endereco.Estado"
                                class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Estado</label>
                            <input asp-for="FornecedorModel.Endereco.Estado" type="text" id="Endereco_Estado"
                                placeholder="Ex: SP"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                disabled />
                            <span asp-validation-for="FornecedorModel.Endereco.Estado" class="text-red-500"></span>
                        </div>


                        <!-- Telefone -->
                        <div class="mb-4">
                            <label asp-for="Telefone" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Telefone
                            </label>
                            <input asp-for="Telefone" type="tel" id="telefone" placeholder="(11) 91234-5678"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"
                                maxlength="15" oninput="formatPhoneNumber(this)" />
                            <span asp-validation-for="Telefone" class="text-red-500"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Email
                            </label>
                            <input asp-for="Email" type="email" placeholder="contato@empresa.com"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="Email" class="text-red-500"></span>
                        </div>

                        <!-- Senha -->
                        <div class="mb-4">
                            <label asp-for="Senha" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Senha
                            </label>
                            <input asp-for="Senha" type="password" id="senha" placeholder="********"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <span asp-validation-for="Senha" class="text-red-500"></span>
                        </div>

                        <!-- Barra de Força da Senha -->
                        <div class="mb-4">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Força da Senha</label>
                            <div id="password-strength-container" class="w-full bg-gray-200 rounded-full">
                                <div id="password-strength-bar" class="h-1 rounded-full"
                                    style="width: 0%; background-color: #e0e0e0;">
                                </div>
                            </div>
                        </div>

                        <!-- Confirmar Senha -->
                        <div class="mb-4">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Confirmar Senha</label>
                            <input type="password" id="confirm-senha" placeholder="********"
                                class="block w-full px-5 py-3 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            <!-- Mensagem de erro caso as senhas não coincidam -->
                            <span id="senha-error" class="text-red-500 hidden">As senhas não coincidem.</span>
                        </div>

                        <div class="lg:col-span-2">
                            <button type="submit"
                                class="w-full px-6 py-3 mt-4 text-white bg-blue-500 border border-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Criar conta
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

<script src="~/js/cadastroUsuario.js"></script>
