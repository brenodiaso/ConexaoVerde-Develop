@model ConexaoVerde.Web.Models.UsuarioModel

@{
    ViewData["Title"] = "Esqueceu Senha";
}

<section class="bg-white dark:bg-gray-900">
    <div class="flex justify-center min-h-screen">
        <div class="hidden bg-cover lg:block lg:w-2/5" style="background-image: url('https://img.freepik.com/free-photo/natural-cosmetic-product-collection_23-2148574896.jpg?t=st=1730999797~exp=1731003397~hmac=f7bc3c6e2e719e6563099bbc2f92097672da642ac6bb07be523ca64cbd8f6876&w=740');">
        </div>
        <div class="flex items-center w-full max-w-3xl p-8 mx-auto lg:px-12 lg:w-3/5">
            <div class="w-full">
                <h1 class="text-2xl font-semibold tracking-wider text-gray-800 capitalize dark:text-white">
                    Esqueceu sua Senha
                </h1>
                <p class="mt-4 text-gray-500 dark:text-gray-400">
                    Informe o seu e-mail para receber as instruções de recuperação de senha.
                </p>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="text-red-500 mt-2">@ViewBag.ErrorMessage</div>
                }

                @if (ViewBag.Sucess != null)
                {
                    <div class="mt-2 text-green-500 bg-green-100 p-2 rounded-md">
                        @ViewBag.Sucess
                    </div>
                }

                <form asp-action="EsqueceuSenha" method="POST" class="grid grid-cols-1 gap-6 mt-8">
                    <div>
                        <label for="Email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">E-mail</label>
                        <input asp-for="Email" type="email" class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40"/>
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <button type="submit" class="mt-3 w-full px-6 py-3 text-white bg-blue-500 rounded-md focus:outline-none hover:bg-blue-600">
                        Enviar Instruções
                    </button>
                </form>

                <div class="mt-4 text-center">
                    <a href="Login" class="text-sm text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300">
                        Voltar para o Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}